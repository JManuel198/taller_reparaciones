<?xml version="1.0" encoding="UTF-8"?>
<odoo>
<!-- Accion taller.orden -->
    <record id="taller_orden_action" model="ir.actions.act_window">
        <field name="name">Orden</field>
        <field name="res_model">taller.orden</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new order.
            </p>
        </field>
    </record>

<!-- Vistas tipo list -->
    <record id="taller_orden_view_list" model="ir.ui.view">
        <field name="name">taller.orden.view.list</field>
        <field name="model">taller.orden</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="vehicle_id"/>
                <field name="state"/>
            </list>
        </field>
    </record>

<!-- Vistas tipo form -->
    <record id="taller_orden_view_form" model="ir.ui.view">
        <field name="name">taller.orden.view.form</field>
        <field name="model">taller.orden</field>
        <field name="arch" type="xml">
            <form string="Orden">
                <header>
                    <!-- No aparece si el estado es distinto a draft (borrador) -->
                    <button 
                        name="action_confirm_quote" 
                        type="object" 
                        string="Confirmar Cotización" 
                        invisible="state != 'draft'" 
                        class="btn-primary"
                    />
                    <!-- No aparece si el estado es distinto a quote (cotización) -->
                    <button 
                        name="action_start_repair" 
                        type="object" 
                        string="Iniciar Reparación" 
                        invisible="state != 'quote'" 
                        class="btn-warning"
                    />
                    <!-- No aparece si el estado es distinto a in_progress (en reparación) -->
                    <button 
                        name="action_mark_completed" 
                        type="object" 
                        string="Marcar como Listo" 
                        invisible="state != 'in_progress'" 
                        class="btn-success"
                    />
                    <!-- No aparece si el estado es completed, invoiced o canceled -->
                    <button
                        name="action_mark_cancel"
                        type="object"
                        string="Cancelar"
                        invisible="state in ('completed', 'invoiced', 'canceled')" 
                        class="btn-danger"
                    />
                    <!-- No aparece si el estado es distinto a completed (completado) -->
                    <button
                        name="action_mark_invoiced"
                        type="object"
                        string="Facturar"
                        invisible="state != 'completed'"
                        class="btn-primary"
                    />

                    <field
                        name="state"
                        widget="statusbar"
                        statusbar_visible="quote,in_process,completed,invoiced,canceled"
                    />

                </header>
                <sheet>   
                    <group>
                        <field name="name" string="Id"/>
                        <field name="partner_id" string="Cliente"/>
                        <field name="vehicle_id" string="Id vehículo"/>
                        <field name="state" string="Estado"/>
                    </group>

                    <notebook>
                    <!-- Página de lineas de orden -->
                        <page string="Lineas de orden">
                            <field name="line_ids">
                                <list editable="bottom">
                                    <field name="product_id" options="{'no_create': True}"/>
                                    <field name="quantity"/>
                                    <field name="price_unit"/>
                                    <field name="subtotal" readonly="1"/>
                                    <!--
                                    <field name="currency_id" invisible="1"/>
                                    -->
                                </list>
                            </field>
                        </page>

                    <!-- Página de descripción -->
                        <page string="Descripción">
                            <group>
                                <field name="date"/>
                                <field name="notes"/>
                            </group>
                        </page>

                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

</odoo>